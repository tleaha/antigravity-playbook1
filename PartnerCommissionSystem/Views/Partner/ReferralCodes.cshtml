@model IEnumerable<PartnerCommissionSystem.Models.ReferralCode>

@{
    ViewData["Title"] = "My Referral Codes";
}

<div class="container mt-5">
    <h2>My Referral Codes</h2>
    <p>
        <a asp-action="CreateReferralCode" class="btn btn-primary">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>
                        <form asp-action="DeleteReferralCode" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</div>
