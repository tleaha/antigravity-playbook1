@model IEnumerable<PartnerCommissionSystem.Models.Commission>

@{
    ViewData["Title"] = "Commission History";
}

<div class="container mt-5">
    <h2>Commission History</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>From Accommodation</th>
                <th>Booking Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CreatedAt.ToShortDateString()</td>
                    <td>@item.Amount.ToString("C")</td>
                    <td>@item.Booking.Accommodation.Name</td>
                    <td>@item.Booking.Amount.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</div>
